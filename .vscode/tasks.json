{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mkdir",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "build"
            ]
        },
        {
            "label": "cmake-configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "..",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DKokkos_ENABLE_CUDA=ON",
                "-DKokkos_ARCH_ZEN2=ON"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "mkdir"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "--config",
                "Debug",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "cmake-configure"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/build/heston_solver",
            "dependsOn": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {           // Add these
                "reveal": "always",     // new
                "panel": "new",        // lines
                "focus": true,         // here
                "clear": true          // 
            }
        }
    ]
}